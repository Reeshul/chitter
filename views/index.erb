<h1>Chitter</h1>
<form action="/posted" method="post">
  <input type="text" name="post_peep" placeholder="What's on your mind?"  />
  <input type="submit" value="Post" />
</form>
<% if @peeps %>
  <div id='peeps_container'>
    <% @peeps.each do |peep| %>
      <div class="post">
        <%= peep.message %>, posted at <%= peep.time_posted.strftime("%H:%M on %a, %m %b") %>
      </div>
    <% end %>
  </div>
<% end %>
