<div>
  <%= flash[:notice] %>
</div>
<h1>Chitter</h1>
<% if @user %>
  <h2>Welcome, <%= @user.email %></h2>
<form action="/sessions/destroy" method="post">
  <input type="submit" value="Log out" />
</form>
<% else %>
<form action="/users/new" method="get">
  <input type="submit" value="Register" />
</form>
<form action="/sessions/new" method="get">
  <input type="submit" value="Log in" />
</form>
<% end %>
<form action="/posted" method="post">
  <input type="text" name="post_peep" placeholder="What's on your mind?"  />
  <input type="submit" value="Post" />
</form>
<% if @peeps %>
  <div id='peeps_container'>
    <% @peeps.each do |peep| %>
      <div class="post">
        <%= peep.message %>, posted at <%= peep.time_posted.strftime("%H:%M on %a, %m %b") %> by <%= peep.user_email %>
      </div>
    <% end %>
  </div>
<% end %>
